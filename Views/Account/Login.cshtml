@model SWLoan.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "로그인";
}

<h1>로그인</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post" asp-controller="Account" asp-action="Login">
                <hr />
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label>아이디</label>
                    <input class="form-control" type="text" asp-for="Id" />
                    <span class="text-danger" asp-validation-for="Id"></span>
                </div>
                <div class="form-group">
                    <label>비밀번호</label>
                    <input class="form-control" type="password" asp-for="Password" />
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" />
                            자동 로그인(아직 안됨 ㅎㅎ.. ㅈㅅ!)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">로그인</button>
                </div>
                <div class="form-group">
                    <p>
                        <a asp-controller="Account" asp-action="ForgotPassword">비밀번호를 잊으셨습니까?</a>
                    </p>
                    <p>
                        <a asp-controller="Account" asp-action="Register">회원가입</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
