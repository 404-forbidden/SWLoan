@model SWLoan.Models.Loan
@{
    ViewData["Title"] = "신청";
}

<div class="row">
    <div class="col-lg-4"></div>
    <div class="col-lg-4">
        <form class="form-group" method="post" asp-controller="Loan" asp-action="Submit">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label>금액</label>
                <input type="number" class="form-control" asp-for="Cost" placeholder="최대 100,000원까지 대출 가능" />
                <span class="text-danger" asp-validation-for="Cost"></span>
            </div>
            <div class="form-group">
                <label>상환일</label>
                <input type="date" class="form-control" asp-for="RepaymentDate" min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span class="text-danger" asp-validation-for="RepaymentDate"></span>
            </div>
            <div class="form-group">
                <label>은행</label>
                <select class="form-control" asp-for="Bank">
                    <option selected disabled hidden>돈 받을 곳을 선택하세요</option>
                    <option>토스</option>
                    <option>신한</option>
                    <option>제주</option>
                    <option>국민</option>
                    <option>농협</option>
                    <option>우리</option>
                    <option>하나</option>
                    <option>우체국</option>
                    <option>기업</option>
                    <option>SC</option>
                    <option>BNP파리바</option>
                    <option>수협</option>
                    <option>산업</option>
                    <option>도이치</option>
                    <option>저축은행</option>
                    <option>신협</option>
                    <option>지역농.축협</option>
                    <option>새마을</option>
                    <option>경남</option>
                    <option>전북</option>
                    <option>광주</option>
                    <option>부산</option>
                    <option>대구</option>
                    <option>HSBC</option>
                    <option>JP모간</option>
                    <option>BOA</option>
                    <option>산림조합</option>
                    <option>중국공상</option>
                    <option>케이뱅크</option>
                    <option>카카오뱅크</option>
                    <option>한국씨티</option>
                    <option>중국건설</option>
                </select>
                <span class="text-danger" asp-validation-for="Bank"></span>
            </div>
            <div class="form-group">
                <label>계좌번호(토스는 전화번호 입력)</label>
                <input type="number" class="form-control" asp-for="AccountNo" />
                <span class="text-danger" asp-validation-for="AccountNo"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">신청</button>
                <a class="btn btn-light" asp-controller="Home" asp-action="Index">취소</a>
            </div>
        </form>
    </div>
    <div class="col-lg-4"></div>
</div>