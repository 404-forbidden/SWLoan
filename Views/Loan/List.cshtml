@{
    ViewData["Title"] = "신청목록";
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>번호</th>
            <th>금액</th>
            <th>신청일</th>
            <th>상환일</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var loan in Model)
        {
            <tr>
                <td><a asp-controller="Loan" asp-action="Detail" asp-route-loanNo="@loan.No">@loan.No</a></td>
                <td>@loan.Cost</td>
                <td>@loan.LoanDate</td>
                <td>@loan.RepaymentDate</td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" asp-controller="Loan" asp-action="Submit">신청</a>